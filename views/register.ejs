<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Anurag">
    <title>ScriptInk</title>
    <meta name="csrf-token" content="<%=csrfToken%>">
    <link rel="preconnect" href="https://fonts.gstatic.com">
<link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700;900&display=swap" rel="stylesheet">   
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.0/animate.min.css" integrity="sha256-6hqHMqXTVEds1R8HgKisLm3l/doneQs+rS1a5NLmwwo=" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css" >
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
<link rel="icon" type="image/png" sizes="32x32" href="/images/favicon-32x32.png">
<link rel="icon" type="image/png" sizes="16x16" href="/images/favicon-16x16.png">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
</head>
<body>
  <%- include('partials/navbar.ejs') %>

      <div class="header-register center-1" >
        <div class="form-container">
          
            <h2 class="heading-posts">Registration for WritoFest 2k21</h2>
            <i class="fa fa-user-plus fa-4x text-white" style="border: .3rem solid white;border-radius: .7rem;padding: .3rem;margin: 1rem 0;"></i>
            <p class="text-white">Enter your info to register for WritoFest 2k21</p>
            <div style="
            width: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        ">
        <form id="register">
           
              
            
                  <div class="form-div">
            
                  <input class="text-field" id="name" placeholder="Name" name="first-name" required>
                 </div>
                 <div class="form-div">
                  
                   <input class="text-field" id="usn" placeholder="USN (University Seat Number)" name="usn" required>
                  </div>
                  <div class="form-div">
                  
                   <input class="text-field" id="email" placeholder="Email" type="email" name="email" required>
                  </div>
                  <div class="form-div">
                  
                   <input class="text-field" id="city" placeholder="City name" name="city" required>
                  </div>
                  <div class="form-div">
                   
                    <input class="text-field" id="phone" type="tel" name="phone" placeholder="Phone Number ( Enter 10 digit Number )" pattern="^\d{10}$" required>
                  </div>
                 

                   <div class="form-div">
                   <select class="text-field" name="college" id="college">
                    <option value="" disabled selected hidden>Choose your college</option>
                     <option value="Siddaganga Institute of Technology">SIT</option>
                     <option value="Others">Others</option>
                   </select>
                   </div>

                   <div class="form-div">
                   
                    <input class="text-field" id="collegeName" placeholder="College Name" name="collegeName" type="text">
                   </div>

                   <div class="form-div">
                   
                    <input class="text-field" id="code" placeholder="Coupon code(optional)" name="code" type="text" >
                    <p class="small message-cuopon" style="color: white;
                    padding-top: 0.2rem
                ;"></p>
                   </div>
                   <!-- <div class="form-div">
                    <input type="checkbox" id="writing" value="writing">
                    <label class="text-white" for="writing">Want to take part in writing competition(Ink your script)</label><br>
                  </div>
                  <div class="form-div">
                    <input  type="checkbox" id="micOfMotivation" value="micOfMotivation">
                    <label class="text-white" for="micOfMotivation">Want to attend second event(Mic of Motivation)</label><br>
                  </div> -->
                  
                  <div class="form-div">
                    <button class="submit-button btn-event g-btn" type="submit">Register</button>
                  </div>
                  
               
                </form>
                <div class="warning">
                  <p class="small" style="color: red;font-size: 1.4rem;">DO NOT REFRESH</p>
                </div>
                <div class="loading" style="margin-top: 1rem;">
                  <div class="center-div">
                    <img src="/images/loading.svg" alt="loading" height="100px" width="100px">
                  </div>
                </div>
              </div>
                  <div class="message">
                     <p style="position: absolute;left: 10px;top: 50%;transform: translateY(-50%);" class="message-info text-white">Success</p>
                     <i style="position: absolute;right: 0;top: 50%;transform: translateY(-50%);" class="fas fa-times-circle text-white close" aria-hidden="true"></i>
                  </div>
                
       
               </div>
        
          
               
    </div>
    <div class="center-1">
      <a href="" id="org-logo"></a>
    </div>
  </section>
  <%- include('partials/footer') %>
   
   

<script src="https://kit.fontawesome.com/1f7ae91032.js" crossorigin="anonymous"></script>

<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
<!-- <script src="/js/button.js"></script> -->
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>
  $('.loading').hide();
  $('.warning').hide();
  $("#code").hide();
  $("#collegeName").hide();
  var collegeSelector = document.querySelector("#college");

  if(collegeSelector.value ==="Siddaganga Institute of Technology")
    {
        $("#code").hide();
        $("#collegeName").hide();
        $(".message-cuopon").html("Flat 50% discount applied.");
        $("#collegeName").removeAttr('required');
        $("#collegeName").val("Siddaganga Institute of Technology");

    }else if(collegeSelector.value ==="Others"){
      $("#code").show();
      $("#collegeName").show();
      $(".message-cuopon").html("");
      $("#collegeName").attr('required', '');
      $("#collegeName").val("");
    }

  collegeSelector.addEventListener("change", function() {
    if(collegeSelector.value ==="Siddaganga Institute of Technology")
    {
        $("#code").hide();
        $("#collegeName").hide();
        $(".message-cuopon").html("Flat 50% discount applied.");
        $("#collegeName").removeAttr('required');
        $("#collegeName").val("Siddaganga Institute of Technology");

    }else{
      $("#code").show();
      $("#collegeName").show();
      $(".message-cuopon").html("");
      $("#collegeName").attr('required', '');
      $("#collegeName").val("");
    }
});
  AOS.init();
</script>
<script src="/js/behaviour.js"></script>

    
</body>
</html>